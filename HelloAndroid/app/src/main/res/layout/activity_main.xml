<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context="com.example.zeroliam.helloandroid.MainActivity">

    <EditText
        android:id="@+id/reqURL"
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:inputType="textUri"
        android:hint="Type your URL here"
        android:textSize="18dp"/>

    <Button
        android:id="@+id/reqBtn"
        android:layout_width="150sp"
        android:layout_height="40sp"
        android:text="Request URL"
        android:layout_marginTop="4dp"
        android:layout_below="@id/reqURL"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:id="@+id/displayHTML"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="HTML To Display"
        android:layout_marginTop="30dp"
        android:layout_below="@id/reqBtn"/>

</RelativeLayout>
